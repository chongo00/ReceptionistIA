PORT=4000

# Credenciales Twilio
TWILIO_AUTH_TOKEN=tu_auth_token_de_twilio
TWILIO_VALIDATE_SIGNATURE=true

# URL pública del servicio (ngrok en local / dominio en Azure)
# Necesaria si activas TTS neuronal con Azure, para que Twilio pueda acceder a /tts/*.mp3
PUBLIC_BASE_URL=

# API de BlindsBook
BLINDSBOOK_API_BASE_URL=http://localhost:3000
BLINDSBOOK_API_TOKEN=token_o_jwt_de_servicio

# Alternativa (dev): auto-login contra POST /auth/login si no pones BLINDSBOOK_API_TOKEN
BLINDSBOOK_LOGIN_EMAIL=
BLINDSBOOK_LOGIN_PASSWORD=

# Azure Speech (TTS neuronal)
# Obtén estas credenciales creando un recurso "Speech" en Azure.
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=

# Voces recomendadas (puedes cambiarlas)
AZURE_TTS_VOICE_ES=es-ES-ElviraNeural
AZURE_TTS_VOICE_EN=en-US-JennyNeural

# Servicio externo de IA (opcional, genérico)
AI_SERVICE_URL=https://tu-servicio-ia.com/api/chat
AI_SERVICE_API_KEY=tu_clave_de_api

