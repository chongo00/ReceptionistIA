PORT=4000

# Twilio credentials
TWILIO_AUTH_TOKEN=tu_auth_token_de_twilio
TWILIO_VALIDATE_SIGNATURE=true

# Public service URL (ngrok locally / domain on Azure)
# Required for Azure neural TTS so Twilio can access /tts/*.mp3
PUBLIC_BASE_URL=

# BlindsBook API
BLINDSBOOK_API_BASE_URL=http://localhost:3000
BLINDSBOOK_API_TOKEN=token_o_jwt_de_servicio

# Alternative (dev): auto-login via POST /auth/login if BLINDSBOOK_API_TOKEN is not set
BLINDSBOOK_LOGIN_EMAIL=
BLINDSBOOK_LOGIN_PASSWORD=

# Azure Speech (neural TTS)
# Get these credentials by creating a Speech resource in Azure
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=

# Recommended voices (customizable)
AZURE_TTS_VOICE_ES=es-ES-ElviraNeural
AZURE_TTS_VOICE_EN=en-US-JennyNeural

# Docker BlindsBook-IA (local Piper TTS, OCR)
# When active, used BEFORE Azure Speech as TTS provider
DOCKER_TTS_URL=http://localhost:8000

# Ollama (local mini LLM for customer identification)
# In Docker Compose use: http://ollama:11434
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:3b

# Twilio phone numbers to companies mapping (JSON)
# Format: {"+15550000001":{"token":"jwt_token_here","companyId":387}}
TWILIO_NUMBER_TO_COMPANY_MAP=

# External AI service (optional)
AI_SERVICE_URL=https://tu-servicio-ia.com/api/chat
AI_SERVICE_API_KEY=tu_clave_de_api

